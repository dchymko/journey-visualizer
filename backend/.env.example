# Server Configuration
NODE_ENV=development
PORT=3001
API_BASE_URL=http://localhost:3001

# Frontend URL (for CORS and OAuth redirects)
FRONTEND_URL=http://localhost:5173

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=kit_journey_visualizer
DB_USER=postgres
DB_PASSWORD=your_password_here

# Session Configuration
SESSION_SECRET=your_session_secret_here_change_in_production

# Kit API Configuration
# Get these from https://app.kit.com/account_settings/integrations
KIT_CLIENT_ID=your_kit_client_id_here
KIT_CLIENT_SECRET=your_kit_client_secret_here
KIT_REDIRECT_URI=http://localhost:3001/auth/kit/callback
KIT_API_BASE_URL=https://api.kit.com/v4

# OAuth Configuration
OAUTH_AUTHORIZATION_URL=https://app.kit.com/oauth/authorize
OAUTH_TOKEN_URL=https://api.kit.com/oauth/token

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
